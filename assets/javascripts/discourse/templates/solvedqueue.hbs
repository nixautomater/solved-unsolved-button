<div class="solvedqueue">
  {{#each cookedTopics as |topic|}}
    {{#if topic.solved_can_process}}
      <div class="clearfix regular topic-post">
        <article class="boxed onscreen-post">
          <a href="" class="tabLoc"></a>
          <div class="row">
            {{mount-widget widget="post-avatar" args=topic.user}}
            <div class="topic-body clearfix">
              {{mount-widget widget="post-meta-data" args=topic.user}}
              <div class="regular contents">
                <div class="solved-topic-title">
                  <a href="{{topic.shareUrl}}" target="_blank" class="post-link">{{topic.title}}</a>
                </div>
              </div>
              <div class="queue-actions">
                {{#if actSolved}}
                  {{d-button actionParam=topic action="solved" icon="check" class="btn-success" label="mmn_solved_queue.queue_btn.solved" disabled=performingAction}}
                {{else}}
                  {{d-button actionParam=topic action="unsolved" icon="times" class="btn-danger" label="mmn_solved_queue.queue_btn.unsolved" disabled=performingAction}}
                {{/if}}
                {{d-button actionParam=topic action="reject" icon="times" class="btn-primary" label="mmn_solved_queue.queue_btn.reject" disabled=performingAction}}
              </div>
            </div>
          </div>
        </article>
      </div>
    {{/if}}
  {{/each}}
  <div style="margin-top: 20px">
    {{d-button action="refresh" icon="refresh" label="mmn_solved_queue.queue_btn.refresh" disabled=performingAction}}
  </div>
</div>